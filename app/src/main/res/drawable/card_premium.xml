<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_light" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Main card -->
    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background_elevated" />
            <corners android:radius="20dp" />
            <stroke
                android:width="0.5dp"
                android:color="@color/separator_opaque" />
        </shape>
    </item>
</layer-list>