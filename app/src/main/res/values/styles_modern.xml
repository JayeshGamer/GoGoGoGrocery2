<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Typography System -->

    <!-- Display Styles - Hero Text -->
    <style name="TextAppearance.GroceryGo.Display" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Headline Styles -->
    <style name="TextAppearance.GroceryGo.Headline.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.GroceryGo.Headline.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.GroceryGo.Headline.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Title Styles -->
    <style name="TextAppearance.GroceryGo.Title.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.GroceryGo.Title.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.GroceryGo.Title.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Body Styles -->
    <style name="TextAppearance.GroceryGo.Body.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.GroceryGo.Body.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="TextAppearance.GroceryGo.Body.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Label Styles -->
    <style name="TextAppearance.GroceryGo.Label.Large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.GroceryGo.Label.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.GroceryGo.Label.Small" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Modern Button Styles -->
    <style name="Widget.GroceryGo.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
    </style>

    <style name="Widget.GroceryGo.Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="Widget.GroceryGo.Button.Outlined" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Modern Card Styles -->
    <style name="Widget.GroceryGo.Card" parent="CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.GroceryGo.Card.Elevated" parent="Widget.GroceryGo.Card">
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.GroceryGo.Card.Flat" parent="Widget.GroceryGo.Card">
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Modern Input Styles -->
    <style name="Widget.GroceryGo.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input_modern</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <!-- Modern Tab Layout -->
    <style name="Widget.GroceryGo.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primary_green</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/primary_green</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabTextAppearance">@style/TextAppearance.GroceryGo.Label.Large</item>
    </style>
</resources>

