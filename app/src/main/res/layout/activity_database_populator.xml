<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_categories"
            android:layout_marginBottom="24dp"
            android:contentDescription="Database icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Database Setup"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Populate Firebase with sample data"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp"/>

        <!-- Product Data Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦ Product Database"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnPopulateData"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Populate Products &amp; Categories"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary_green"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Delivery Partners Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸšš Delivery Partners"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_blue"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnPopulateDeliveryPartners"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Add Delivery Partners"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/secondary_blue"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnClearDeliveryPartners"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Clear All Partners"
                    android:textColor="@color/error_red"
                    android:textSize="13sp"
                    android:background="@drawable/bg_button_outline"
                    android:backgroundTint="@color/transparent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/background_light_blue">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to populate database.\n\nðŸ“¦ Products: Click above to add categories and products\n\nðŸšš Delivery Partners: Click above to add mock delivery partners for testing admin features"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:padding="16dp"
                android:lineSpacingMultiplier="1.3"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
