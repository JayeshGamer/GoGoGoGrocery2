<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    tools:context=".CheckoutActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        app:elevation="2dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/card_background"
            app:title="Checkout"
            app:titleTextColor="@color/text_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/text_primary"
            android:elevation="0dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="90dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <!-- Delivery Address Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_on"
                            app:tint="@color/primary_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Address"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnChangeAddress"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change address"
                            android:textAllCaps="false"
                            android:textSize="13sp"
                            android:minWidth="56dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:iconPadding="0dp" />
                    </LinearLayout>

                    <!-- Address Content -->
                    <LinearLayout
                        android:id="@+id/layoutAddressContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_address_content"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvAddressName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textSize="13sp"
                            android:textColor="@color/primary_green"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAddressDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123 Main Street, Apartment 4B\nNew York, NY 10001"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 123-4567"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto"
                            android:layout_marginTop="6dp"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="6dp"
                            app:drawableTint="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delivery Time Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/primary_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Time"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Time Slot Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupTimeSlots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAsap"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ASAP (30-45 min)"
                            android:textSize="12sp"
                            android:checked="true"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/chip_stroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipMorning"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning (8AM-12PM)"
                            android:textSize="12sp"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/chip_stroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAfternoon"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Afternoon (12PM-5PM)"
                            android:textSize="12sp"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/chip_stroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEvening"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Evening (5PM-9PM)"
                            android:textSize="12sp"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/chip_stroke_selector"
                            app:chipStrokeWidth="1dp" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Order Items Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_shopping_bag"
                            app:tint="@color/primary_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Order Items"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:id="@+id/tvItemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Items"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto" />
                    </LinearLayout>

                    <!-- Items RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewOrderItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_checkout_product" />

                    <!-- View More Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewMore"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View all items"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        app:icon="@drawable/ic_expand_more"
                        app:iconGravity="end"
                        app:iconSize="20dp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Method Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_payment"
                            app:tint="@color/primary_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Payment Method"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Payment Options (RadioGroup for single selection) -->
                    <RadioGroup
                        android:id="@+id/radioGroupPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Cash on Delivery -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="10dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/divider"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RadioButton
                                android:id="@+id/radioCashOnDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cash on Delivery"
                                android:checked="true"
                                android:padding="14dp"
                                android:drawableEnd="@drawable/ic_cash"
                                android:drawablePadding="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto"
                                android:button="@null"
                                android:drawableStart="@drawable/radio_button_selector"
                                android:background="?attr/selectableItemBackground" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Credit/Debit Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="10dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/divider"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RadioButton
                                android:id="@+id/radioCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Credit/Debit Card"
                                android:padding="14dp"
                                android:drawableEnd="@drawable/ic_credit_card"
                                android:drawablePadding="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto"
                                android:button="@null"
                                android:drawableStart="@drawable/radio_button_selector"
                                android:background="?attr/selectableItemBackground" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- UPI Payment -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/divider"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <RadioButton
                                android:id="@+id/radioUPI"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="UPI Payment"
                                android:padding="14dp"
                                android:drawableEnd="@drawable/ic_upi"
                                android:drawablePadding="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto"
                                android:button="@null"
                                android:drawableStart="@drawable/radio_button_selector"
                                android:background="?attr/selectableItemBackground" />
                        </com.google.android.material.card.MaterialCardView>
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bill Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBillDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_receipt"
                            app:tint="@color/primary_green" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bill Details"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Item Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Item Total"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:id="@+id/tvItemTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹120.00"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto" />
                    </LinearLayout>

                    <!-- Delivery Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Fee"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:id="@+id/tvDeliveryFee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹40.00"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto" />
                    </LinearLayout>

                    <!-- Taxes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Taxes &amp; Charges"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:id="@+id/tvTaxes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹6.00"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto" />
                    </LinearLayout>

                    <!-- Discount (Optional) -->
                    <LinearLayout
                        android:id="@+id/layoutDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Discount"
                            android:textSize="13sp"
                            android:textColor="@color/success_green"
                            android:fontFamily="@font/roboto" />

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-₹0.00"
                            android:textSize="13sp"
                            android:textColor="@color/success_green"
                            android:fontFamily="@font/roboto" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="8dp" />

                    <!-- Total Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Amount"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹166.00"
                            android:textSize="16sp"
                            android:textColor="@color/primary_green"
                            android:fontFamily="@font/roboto_bold" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Delivery Instructions Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_note"
                            app:tint="@color/primary_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Instructions"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Optional)"
                            android:textSize="11sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- Instructions Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutInstructions"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E.g., Ring the doorbell, Leave at door"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxStrokeWidth="1dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="200"
                        app:hintTextColor="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etInstructions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="80dp"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:maxLength="200"
                            android:maxLines="3"
                            android:textSize="13sp"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/text_primary" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Total Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/tvBottomTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹166.00"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Place Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlaceOrder"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Place Order"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="32dp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:backgroundTint="@color/primary_green"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_green" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
